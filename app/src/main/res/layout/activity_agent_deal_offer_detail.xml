                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/c_phone2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/c_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
<!---->


                        <TextView
                            android:id="@+id/c_type"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/c_website"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/edited_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/edit_date"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/end_date"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/id"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/is_active"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
<!---->


                        <TextView
                            android:id="@+id/offer"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/rating"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/remaining_seats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/start_date"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/state_name"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/top_deal"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/total_seats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/user_id"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>


                    </LinearLayout>


                </LinearLayout>

                <!--  colleg description-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:background="@color/colorAccent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:background="@color/cardview_dark_background"
                        android:orientation="horizontal"
                        android:layout_weight="3">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="   College Description"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/btn_color">

                        <TextView
                            android:id="@+id/id_tv_clg_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="gdfjdjkgjdkfgvjkdfgjfgjfgfjdgjfdgjfjkfjfgjfgdfjkgfjkgdjkgdjkgdfjkgvfjkgvbdfjvbfdjvfjgvfjgfjkgfjgfj
