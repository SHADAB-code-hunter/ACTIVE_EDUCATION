<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <android.support.v7.widget.Toolbar
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/theme1"
                android:id="@+id/toolbar_daily_quiz">
                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/id_back_btn_quiz"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2.2"
                                    android:layout_marginTop="18dp"
                                    android:layout_marginBottom="13dp"
                                    android:background="@drawable/ic_back_arrow"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="00:00:00"
                                    android:gravity="center"
                                    android:visibility="invisible"
                                    android:layout_gravity="center"
                                    android:layout_margin="0dp"
                                    android:layout_weight="2.1"
                                    android:textSize="9sp"
                                    android:textColor="@color/white"
                                    android:id="@+id/toolbar_timer" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2.2"
                                    android:layout_gravity="center"
                                    android:layout_margin="0dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="45dp"
                                    android:layout_margin="0dp"
                                    android:visibility="invisible"
                                    android:gravity="center"
                                    android:layout_gravity="center_vertical"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:id="@+id/toolbar_title" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="left|center"
                                    android:text="Offer Detail"
                                    android:textSize="18sp"
                                    android:layout_gravity="left"
                                    android:layout_marginRight="0dp"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:layout_weight="1.5"
                                    android:layout_margin="9dp"
                                    android:visibility="invisible"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="0dp"
                                    android:id="@+id/toolbar_skip" />
                            </LinearLayout>
                        </TableRow>
                    </LinearLayout>

                </TableLayout>
            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.8">

                <android.support.v4.view.ViewPager
                    android:id="@+id/id_collge_banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                </android.support.v4.view.ViewPager>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@color/cardview_dark_background"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorAccent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:padding="5dp"
                        android:background="@color/cardview_dark_background"
                        android:orientation="horizontal"
                        android:layout_weight="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:background="@color/cardview_dark_background"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/id_tv_course"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Courses"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:textColor="@color/white"/>

                            <LinearLayout
                                android:id="@+id/id_change_courses_linear"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorAccent"
                                android:orientation="horizontal"
                                android:padding="2dp"
                                android:layout_weight="1">
                                <TextView
                                    android:id="@+id/id_tv_course_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Bsc."
                                    android:layout_weight="1"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:textColor="@color/white"/>
                                <Space
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/white"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="3dp"
                                    android:layout_weight="6"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:visibility="gone"
                            android:background="@color/cardview_dark_background"
                            android:orientation="horizontal"
                            android:layout_weight="1">
                            <Button
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:visibility="invisible"
                                android:text=" More Detail"
                                android:layout_gravity="center|right|end"
                                android:background="@android:drawable/dialog_holo_light_frame" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginTop="0dp"
                        android:background="@color/btn_color">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Courses Description"
                            android:textColor="@color/white"
                            android:layout_margin="2dp"/>

                        <TextView
