<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/bgnew">

    <LinearLayout
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/id_frm_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/id_back_btn_quiz"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_back_arrow"/>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="00:00:00"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_weight="2.1"
            android:textSize="9sp"
            android:id="@+id/toolbar_timer" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:layout_gravity="center"
            android:layout_margin="0dp" />


        <TextView
            android:id="@+id/category_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_margin="9dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:id="@+id/toolbar_skip" />


        <RelativeLayout

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_gravity="center">


            <FrameLayout
                android:id="@+id/id_filter_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/back_about">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_search"
                    android:gravity="center" />
            </FrameLayout>
            <FrameLayout
            android:id="@+id/id_filter_upper"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_about">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/ic_filter_up"/>
        </FrameLayout>
        </RelativeLayout>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/id_toolbar"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <HorizontalScrollView
        android:id="@+id/id_filter_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/id_toolbar"
        android:background="#FF464756"
        android:visibility="gone"
        android:layout_height="40dp">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/id_state_filter"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:background="@drawable/backractengle"
            android:layout_gravity="center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/id_tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="State"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </FrameLayout>
            <TextView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_margin="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/ic_up_down_filter"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_city_filter"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:background="@drawable/backractengle"
            android:layout_gravity="center|left">

            <!--
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="State "
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center" />-->

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Search_Spinner.SearchableSpinner
                    android:id="@+id/id_city"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/SpinnerwithNoArrow"
                    android:textColor="#FF0000"
                    app:SearchViewTextColor="@color/white"
                    app:hintText="   "/>

                <TextView
                    android:id="@+id/id_tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="City"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </FrameLayout>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/ic_up_down_filter"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_course_filter"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:background="@drawable/backractengle"
            android:layout_gravity="center|left">

            <!--
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="State "
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center" />-->

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Search_Spinner.SearchableSpinner
                    android:id="@+id/id_course"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/SpinnerwithNoArrow"
                    android:textColor="#FF0000"
                    app:SearchViewTextColor="@color/white"
                    app:hintText="   "/>

                <TextView
                    android:id="@+id/id_tv_course"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Course"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </FrameLayout>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/ic_up_down_filter"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_branch_filter"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:background="@drawable/backractengle"
            android:layout_gravity="center|left">

            <!--
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="State "
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center" />-->

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Search_Spinner.SearchableSpinner
                    android:id="@+id/id_branch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/SpinnerwithNoArrow"
                    android:textColor="#FF0000"
                    app:SearchViewTextColor="@color/white"
                    app:hintText="   "/>

                <TextView
                    android:id="@+id/id_tv_branch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Branch"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </FrameLayout>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/ic_up_down_filter"/>
        </LinearLayout>

    </LinearLayout>
    </HorizontalScrollView>
    <android.support.design.widget.FloatingActionButton
        android:layout_marginTop="-24dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:tint="@color/fab_color"
        android:id="@+id/fab2"
        android:visibility="gone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/ic_filter"
        app:backgroundTint="@color/filtersfab"
        app:elevation="0dp" />

    <android.support.design.widget.FloatingActionButton
        android:tint="@color/fab_color"
        android:id="@+id/fab"
        android:visibility="gone"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/ic_filter"
        app:backgroundTint="@color/filtersfab"
        app:elevation="0dp" />


    <LinearLayout
        android:id="@+id/id_lnr_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@drawable/ic_comm_menu">

        <LinearLayout
            android:id="@+id/id_linear_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/round_btn1"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/flt_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/ic_cal_recever"
                    android:layout_margin="0dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|bottom"
                    android:textSize="10dp"
                    android:layout_margin="2dp"
                    android:textColor="@color/white"
                    android:text="Call" />
            </FrameLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/round_btn1"
                android:padding="0dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/ic_videocall_button"
                    android:layout_margin="0dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|bottom"
                    android:textSize="8dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:text="Video Call" />
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_linear_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/round_btn1"
                android:padding="0dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/ic_chat_new"
                    android:layout_margin="0dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|bottom"
                    android:textSize="8dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:text="Chat"
                    />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/id_list_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="#464646"
        android:layout_marginTop="100dp"
        android:gravity="center"/>

</RelativeLayout>
