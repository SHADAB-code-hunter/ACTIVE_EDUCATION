<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_relative_dialog"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/id_id_winner_framlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

            <LinearLayout
                android:id="@+id/id_linear_upper"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_smartphone"/>

               <EditText
                   android:id="@+id/id_edt_m_num"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:hint=" 9599805321 "
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   android:backgroundTint="#451dff"
                   android:gravity="center"
                   android:maxLines="1"
                   android:textColor="@color/btn_color"
                   android:textColorHint="@color/btn_color"
                   android:layout_gravity="center"/>
                <Button
                    android:id="@+id/id_btn_verify"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Verify"/>
            </LinearLayout>

        <LinearLayout
                    android:id="@+id/id_otp_verify"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/id_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:text="Enter OTP Code "/>
                    <EditText
                        android:id="@+id/edt_otp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#451dff"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/btn_color"
                        android:textColorHint="@color/btn_color"
                        android:layout_gravity="center"
                        android:hint="  * * * * * * "/>
                    <Button
                        android:id="@+id/id_otp_btn_verif"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_gravity="center|bottom"
                        android:text="OTP VERIFY"/>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>