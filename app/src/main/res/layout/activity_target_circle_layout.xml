<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#d7d2d3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:background="#4e2d2244"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/back_about"
                android:layout_gravity="center|left">

            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="00:00:00"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_weight="2.8"
                android:textSize="9sp"
                android:id="@+id/toolbar_timer" />
            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:textSize="9sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_marginBottom="0dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Welcome "
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_profile"
                android:layout_gravity="center"
                android:layout_margin="0dp" />

            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_gravity="center" />
        </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardBackgroundColor="@color/path_black"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Seats"
                    android:textSize="20sp"
                    android:gravity="center|top"
                    android:textStyle="bold"
                    android:textColor="#afaba9"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="637"
                    android:textSize="35sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"/>

            </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <utilities.BatteryProgressView
                android:id="@+id/progress1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="right|center">

            </utilities.BatteryProgressView>

        </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardBackgroundColor="@color/path_black"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending Seats"
                android:textSize="20sp"
                android:gravity="center|top"
                android:textStyle="bold"
                android:textColor="#afaba9"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="150"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#ffffff"/>

        </LinearLayout>
        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <utilities.BatteryProgressView
                android:id="@+id/progress2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="right|center">

            </utilities.BatteryProgressView>

        </FrameLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardBackgroundColor="@color/path_black"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Filled Up Seats"
                android:textSize="20sp"
                android:gravity="center|top"
                android:textStyle="bold"
                android:textColor="#afaba9"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="487"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#ffffff"/>

        </LinearLayout>
        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <utilities.BatteryProgressView
                android:id="@+id/progress3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="right|center">

            </utilities.BatteryProgressView>

        </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>