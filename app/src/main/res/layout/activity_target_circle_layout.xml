<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/pure_red"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:background="@color/darkpure_red"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:fontFamily="sans-serif"
                android:gravity="center|left"
                android:text="Manav Rachna University "
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

         <LinearLayout
             android:id="@+id/id_menu_btn"
             android:layout_width="40dp"
             android:layout_height="30dp"
             android:padding="5dp"
             android:gravity="center"
             android:layout_gravity="center"
             android:orientation="vertical"
             android:background="@drawable/drwr_back">

             <TextView
                 android:id="@+id/textView2"
                 android:layout_width="match_parent"
                 android:layout_height="2dp"
                 android:layout_margin="2dp"
                 android:background="#711017"
                 android:layout_gravity="center"/>

             <TextView
                 android:id="@+id/textView3"
                 android:layout_width="match_parent"
                 android:layout_height="2dp"
                 android:layout_gravity="center"
                 android:layout_margin="2dp"
                 android:background="#711017" />

             <TextView
                 android:id="@+id/textView4"
                 android:layout_width="match_parent"
                 android:layout_height="2dp"
                 android:layout_gravity="center"
                 android:layout_margin="2dp"
                 android:background="#711017" />

         </LinearLayout>

         <TextView
             android:layout_width="15dp"
             android:layout_height="30dp"
             android:layout_gravity="center"
             android:layout_margin="0dp" />
        </LinearLayout>
        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
            android:id="@+id/expandableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:ael_duration="400"
            app:ael_interpolator="accelerate"
            app:ael_orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#871419"
                android:elevation="2dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:orientation="vertical"
                    android:outlineProvider="bounds">
                    <LinearLayout
                        android:id="@+id/id_linear_trgt_menu"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|left"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:fontFamily="sans-serif"
                            android:background="@drawable/ic_new_target"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="sans-serif"
                            android:text="Target"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ffff"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/id_linear_prfl_menu"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|left"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:fontFamily="sans-serif"
                            android:background="@drawable/ic_user_prfl"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="sans-serif"
                            android:text="Profile"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ffff"
                            />
                    </LinearLayout>
<!--2-->

                    <LinearLayout
                        android:id="@+id/id_linear_seat_menu"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|left"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:fontFamily="sans-serif"
                            android:background="@drawable/ic_chair"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="sans-serif"
                            android:text="Submit Seat"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ffff"
                            />
                    </LinearLayout>

                    <!--3-->

                    <LinearLayout
                        android:id="@+id/id_linear_acc_menu"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|left"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:fontFamily="sans-serif"
                            android:background="@drawable/ic_account"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="sans-serif"
                            android:text="Account"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ffff"
                            />
                    </LinearLayout>
                    <!--2-->

                    <LinearLayout
                        android:id="@+id/id_linear_gallery_menu"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|left"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:fontFamily="sans-serif"
                            android:background="@drawable/ic_gallery"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="sans-serif"
                            android:text="Gallery"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ffff"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/id_linear_abtus_menu"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center|left"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:fontFamily="sans-serif"
                            android:background="@drawable/ic_info_icn"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="sans-serif"
                            android:text="About Us"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ffff"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="3dp"
                android:backgroundTint="@color/white"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textSize="12sp"
                    android:hint="Search ...."
                    android:textColorHint="#6c3b3b3b"
                    android:drawableRight="@drawable/ic_magnifying_glass_icon"
                    android:backgroundTint="@color/transparent" />
            </LinearLayout>
            </android.support.v7.widget.CardView>

         <FrameLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_planet_earth"/>

             <FrameLayout
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:layout_gravity="right"
                 android:background="@drawable/circle_24dp"
                 android:backgroundTint="#9c0103">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:gravity="center"
                     android:text="12"
                     android:textColor="@color/white"
                     android:textSize="10sp"
                     android:textStyle="bold" />
             </FrameLayout>
         </FrameLayout>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_planet_earth"/>

        </LinearLayout>
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="0dp"
                app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:padding="3dp"
                android:backgroundTint="@color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:text="Dashboard"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:padding="3dp"
                    android:backgroundTint="@color/white"
                    android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_new_target"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/id_fragment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    android:textColor="@color/darkpure_red"/>
            </LinearLayout>
          </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>
        <FrameLayout
            android:id="@+id/id_fragment_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </FrameLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>