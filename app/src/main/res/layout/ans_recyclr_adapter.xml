<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:cardCornerRadius="5dp"
        android:layout_weight="1.5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/id_q_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/quiz_ques_color"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_ques"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textColor="@color/quiz_ques_color"
                android:text="Who Was the First Prime Minister Of India ?"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/opt_linear1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_opt1"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:textColor="@color/quiz_ques_color"
                    android:background="@drawable/click_color"
                    android:text="A"/>
                <TextView
                    android:id="@+id/opt_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/quiz_ques_color"
                    android:text="Option A"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/opt_linear2"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_opt2"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:textColor="@color/quiz_ques_color"
                    android:background="@drawable/click_color"
                    android:text="B"/>
                <TextView
                    android:id="@+id/opt_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/quiz_ques_color"
                    android:text="Option A"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/opt_linear3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"

                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_opt3"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:textColor="@color/quiz_ques_color"
                    android:background="@drawable/click_color"
                    android:text="C"/>
                <TextView
                    android:id="@+id/opt_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/quiz_ques_color"
                    android:text="Option A"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/opt_linear4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_opt4"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:textColor="@color/quiz_ques_color"
                    android:background="@drawable/click_color"
                    android:text="D"/>
                <TextView
                    android:id="@+id/opt_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/quiz_ques_color"
                    android:layout_marginLeft="10dp"
                    android:text="Option A"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp">
                <TextView
                    android:id="@+id/id_attempt_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="True"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>