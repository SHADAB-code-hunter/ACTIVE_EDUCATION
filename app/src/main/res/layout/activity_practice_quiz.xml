<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/id_prc_quiz_back">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="-20dp"
        android:background="@drawable/light_layer"
        android:paddingTop="5dp">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/id_back_quicz_Quick_btn"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_previous_btn"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.6" />

                            <ImageView
                                android:id="@+id/toolbar_icn"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_margin="0dp"
                                android:background="@drawable/ic_quiz_icn"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/toolbar_title"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="Practice Quiz"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.7" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/id_icon_timer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="9dp"
                            android:layout_weight="2.1"
                            android:visibility="gone" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="0dp"
                            android:layout_weight="2.1"
                            android:gravity="center"
                            android:text="00:00:00"
                            android:textColor="@color/white"
                            android:textSize="9sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/toolbar_skip"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="18dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="2.1"
                            android:background="@drawable/ic_exit_btn"
                            android:gravity="top|center"
                            android:text="Exit"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:gravity="bottom">

                </LinearLayout>
            </RelativeLayout>

        </TableLayout>
    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v4.view.ViewPager
                    android:id="@+id/id_viewpager_quiz_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v4.view.ViewPager>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/id_frm_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/light_layer"
                android:layout_gravity="right"
                android:gravity="end"
                android:padding="0dp"
                android:layout_weight="6">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="end"
                    android:layout_marginRight="1dp"
                    android:background="#FFF212"
                    android:layout_gravity="end|center">

                    <TextView
                        android:id="@+id/id_tv_q_no"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textColor="@color/path_black"
                        android:gravity="center"/>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>