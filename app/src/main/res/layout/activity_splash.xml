<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/id_viewpager_splash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ba5c5d5e">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#2345"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Skip"
                android:layout_gravity="left"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/white"/>
            <!-- <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="o     o     o     o"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:textColor="@color/white"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="==>"
                 android:layout_gravity="right"
                 android:gravity="right"
                 android:textColor="@color/white"/>-->

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.95"/>

            <rubber_indicator.RubberIndicator
                android:id="@+id/rubber"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"/>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <FrameLayout
                android:id="@+id/id_frame_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.9"
                android:padding="5dp"
                android:clickable="true"
                android:background="@drawable/skip_button_shap">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow" />
                </FrameLayout>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>