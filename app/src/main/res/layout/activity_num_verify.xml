<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gt.active_education.Num_Verify_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="40dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_verfy_img"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingBottom="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/grey"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/txt_color_head"
                android:text="Verify Your Phone Number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|top"
                android:textSize="14sp"
                android:layout_weight="1.2"
                android:textColor="@color/txt_color"
                android:text="Please enter your Phone number. You will receive a text message with your verification code. "/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="30dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text=" + 91"
                        android:textColor="@color/light_grey"
                        android:gravity="center"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@color/light_grey"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:foregroundTint="@color/white"
                        android:textSize="26sp"
                        android:cursorVisible="true"
                        android:background="@null"
                        android:backgroundTint="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1.2">
                    <Button
                        android:id="@+id/id_verify_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/golden"
                        android:text="Verify"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <fragment
        android:id="@+id/sample_fragment"
        class="fragment.Num_Verify_Fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/num_verify_frg_layout" />
</LinearLayout>