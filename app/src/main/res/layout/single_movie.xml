<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        card_view:cardBackgroundColor="@color/transparent"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:background="@color/white"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_marginRight="4dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_college" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="title" />

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="left"
                            android:id="@+id/tv_genre"
                            android:layout_weight="0.5"
                            android:fontFamily="sans-serif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="10sp"
                            tools:text="genre" />
                        <TextView
                            android:layout_marginTop="4dp"
                            android:gravity="left"
                            android:id="@+id/tv_year"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif"
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            tools:text="year" />
                        <TextView
                            android:gravity="left"
                            android:id="@+id/tv_quality"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif"
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Course: " />

                        <TextView
                            android:layout_marginTop="2dp"
                            android:gravity="left"
                            android:id="@+id/tv_rating"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif"
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Avg Fees: 55,000/ year" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:gravity="left"
                            android:visibility="gone"
                            android:id="@android:id/text1"
                            android:textSize="10sp"
                            android:layout_weight="0.5"
                            android:fontFamily="sans-serif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            tools:text="Rating" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/is_discout_linear"
                        android:orientation="vertical"
                        android:visibility="invisible"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:background="@drawable/discount_drawable">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:gravity="center"
                            android:id="@+id/id_discout_text"
                            android:textSize="14sp"
                            android:text="10"
                            android:drawableRight="@drawable/ic_disc"
                            android:fontFamily="sans-serif"
                            android:layout_width="53dp"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black" />
                        <TextView
                            android:gravity="center"
                            android:id="@android:id/text1"
                            android:textSize="10sp"
                            android:text="Discount"
                            android:fontFamily="sans-serif"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:gravity="left"
                            android:visibility="gone"
                            android:id="@android:id/text1"
                            android:textSize="10sp"
                            android:layout_weight="0.5"
                            android:fontFamily="sans-serif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            tools:text="Rating" />

                    </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="2dp"
            android:gravity="center"
            android:background="#f3e2dff1"
            android:layout_gravity="bottom">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:padding="4dp" />
            <ImageView
                android:id="@+id/img_web"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ksw_md_thumb"
                android:padding="4dp"
                android:src="@drawable/ic_web"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <ImageView
                android:id="@+id/img_course"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ksw_md_thumb"
                android:padding="4dp"
                android:src="@drawable/ic_courses"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/img_call"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ksw_md_thumb"
                android:padding="4dp"
                android:src="@drawable/ic_call_rec_new"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/img_broucher"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ksw_md_thumb"
                android:padding="4dp"
                android:src="@drawable/ic_download"/>


            <Button
                android:id="@+id/id_btn_apply"
                android:layout_gravity="end|right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="#ea6c49"
                android:textColor="@android:color/white"
                android:text="Apply Now" />

        </LinearLayout>
      </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>