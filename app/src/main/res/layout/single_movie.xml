<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        card_view:cardBackgroundColor="@color/transparent"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="110dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/picture" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:text="title" />

                        <LinearLayout
                            android:id="@+id/id_rating_linear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2.2"
                            android:gravity="center"
                            android:orientation="horizontal">

                        </LinearLayout>
                      <!--  <RatingBar
                            android:id="@+id/id_rating_bar"
                            android:layout_width="match_parent"
                            android:backgroundTint="@color/sample_red"
                            android:layout_height="12dp"
                            android:layout_weight="2.2"
                            android:visibility="gone"
                            android:background="@drawable/ic_stars_red" />-->
                       <!-- <RAting_BAr.MaterialRatingBar

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-3dp"
                            android:layout_marginRight="-3dp"
                            android:rating="2.5"
                            style="@style/Widget.MaterialRatingBar.RatingBar" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_genre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:fontFamily="sans-serif"
                                android:gravity="left"
                                android:textColor="@android:color/black"
                                android:textSize="10sp"
                                tools:text="genre" />

                            <TextView
                                android:id="@+id/tv_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="0.5"
                                android:fontFamily="sans-serif"
                                android:gravity="left"
                                android:textColor="@android:color/black"
                                android:textSize="10sp"
                                tools:text="year" />

                            <TextView
                                android:id="@+id/tv_quality"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:fontFamily="sans-serif"
                                android:gravity="left"
                                android:text="Course: "
                                android:textColor="@android:color/black"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tv_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_weight="0.5"
                                android:fontFamily="sans-serif"
                                android:gravity="left"
                                android:text="Avg Fees: 55,000/ year"
                                android:textColor="@android:color/black"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@android:id/text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="0.5"
                                android:fontFamily="sans-serif"
                                android:gravity="left"
                                android:textColor="@android:color/black"
                                android:textSize="10sp"
                                android:visibility="gone"
                                tools:text="Rating" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/is_discout_linear"
                            android:layout_width="match_parent"

                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:layout_weight="1.2"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <LinearLayout
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:padding="2dp"
                                android:gravity="center|right"
                                android:background="@drawable/back_discound"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/id_discout_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:layout_gravity="center|top"
                                    android:gravity="center"
                                    android:text="10%"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@android:id/text1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:text="Discount"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:textSize="8sp" />

                                <TextView
                                    android:id="@android:id/text1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:layout_weight="0.5"
                                    android:fontFamily="sans-serif"
                                    android:gravity="left"
                                    android:textColor="@android:color/black"
                                    android:textSize="10sp"
                                    android:visibility="gone"
                                    tools:text="Rating" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:background="#3412"
                android:clickable="true"
                android:gravity="center"
                android:padding="2dp">

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:padding="0dp" />

                <ImageView
                    android:id="@+id/img_web"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="0dp"
                    android:src="@drawable/ic_globe" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <ImageView
                    android:id="@+id/img_course"
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    android:padding="0dp"
                    android:src="@drawable/ic_courses_new" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:padding="4dp" />

                <ImageView
                    android:id="@+id/img_call"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="0dp"
                    android:src="@drawable/ic_call_new" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:padding="4dp" />

                <ImageView
                    android:id="@+id/img_broucher"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:padding="0dp"
                    android:src="@drawable/ic_download" />


                <Button
                    android:id="@+id/id_btn_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|right"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/btn_apply_back"
                    android:text="Apply Now"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>