<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"

    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/id_result_back">

        <android.support.v7.widget.Toolbar
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/light_layer"
            android:id="@+id/toolbar2">
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingLeft="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/id_back_btn_quiz"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2.2"
                                android:layout_marginTop="18dp"
                                android:layout_marginBottom="13dp"
                                android:background="@drawable/ic_previous_btn"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="00:00:00"
                                android:gravity="center"
                                android:visibility="invisible"
                                android:layout_gravity="center"
                                android:layout_margin="0dp"
                                android:layout_weight="2.1"
                                android:textSize="9sp"
                                android:textColor="@color/text_white"
                                android:id="@+id/toolbar_timer" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2.2"
                                android:layout_gravity="center"
                                android:layout_margin="0dp" />
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="0dp"
                                android:gravity="center"
                                android:background="@drawable/icn_timer"
                                android:layout_gravity="center_vertical"
                                android:textStyle="bold"
                                android:textColor="@color/text_white"
                                android:id="@+id/toolbar_title" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:gravity="left|center"
                                android:text="Scoreboard"
                                android:textSize="20sp"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="left"
                                android:layout_marginRight="0dp"
                                android:textColor="@color/text_white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_weight="1.8"
                                android:layout_margin="9dp"
                                android:visibility="invisible"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_marginRight="0dp"
                                android:id="@+id/toolbar_skip" />
                        </LinearLayout>
                    </TableRow>
                </LinearLayout>

            </TableLayout>
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/id_image_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_profile_pictures"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="1dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="5"
                app:civ_shadow_color="#8BC34A"/>

            <TextView
                android:id="@+id/id_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text=""
                android:layout_gravity="center"
                android:textColor="@color/white"/>

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.1"
            android:gravity="center">
            <com.github.PieChart.charting.charts.PieChart
                android:id="@+id/piechart"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@color/transparent"
                android:layout_gravity="center|bottom"
                />
            <TextView
                android:layout_width="80dp"
                android:layout_height="250dp"
                android:text="Total
Marks"
                android:textSize="20sp"
                android:layout_gravity="center|bottom"
                android:gravity="center"
                android:layout_marginBottom="15dp"/>

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.4"
            android:layout_marginTop="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
                android:layout_margin="5dp"
            android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/skip_color"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Skip"
                    android:textColor="@color/white"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/wrong_color"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Skip"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/right_color"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Skip"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_weight="3.2"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btn_review"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:textAllCaps="false"
                    android:background="@drawable/light_circle_oval"
                    android:textColor="@color/color_golden"
                    android:text="Review Answers"/>
                <Button
                    android:id="@+id/id_btn_close"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:background="@drawable/btn_mark_shape"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff"
                    android:text="Close"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center|bottom"
            android:layout_gravity="center|bottom"
            android:background="@drawable/light_layer">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_call_now"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>

