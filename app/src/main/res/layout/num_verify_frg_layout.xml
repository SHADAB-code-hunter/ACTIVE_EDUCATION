<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="0dp"
            android:layout_weight="1.5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="40dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_verfy_img"/>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="0dp"
            android:background="@color/grey"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/txt_color_head"
                android:text="Verify Your Phone Number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|top"
                android:textSize="14sp"
                android:layout_weight="1.2"
                android:textColor="@color/txt_color"
                android:text="Please enter your Phone number. You will receive a text message with your verification code. "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="@color/txt_color_head"
                android:text="Please Choose Login Type First"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:gravity="center"
                    android:id="@+id/id_lg_typ1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/tumblr_red"
                    android:background="@drawable/round_btn1">
                    <FrameLayout
                        android:id="@+id/id_check1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:background="@drawable/ic_check_round"></FrameLayout>
                    <ImageView
                        android:id="@+id/id_img1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_lgtype_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center|bottom"
                        android:text="Seat Provider"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/id_lg_typ2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/tumblr_red"
                    android:background="@drawable/round_btn1">
                    <FrameLayout
                        android:id="@+id/id_check2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:background="@drawable/ic_check_round"></FrameLayout>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_lgtype_2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center|bottom"
                        android:text="Franchiser"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/id_lg_typ3"
                    android:backgroundTint="@color/tumblr_red"
                    android:background="@drawable/round_btn1">
                    <FrameLayout
                        android:id="@+id/id_check3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:background="@drawable/ic_check_round"></FrameLayout>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_study"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center|bottom"
                        android:gravity="center"
                        android:text="Student"/>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="30dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_weight="0.4">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text=" + 91"
                        android:textColor="@color/light_grey"
                        android:gravity="center"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@color/light_grey"/>

                    <EditText
                        android:id="@+id/id_edt_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:foregroundTint="@color/white"
                        android:textSize="20sp"
                        android:cursorVisible="true"
                        android:background="@null"
                        android:backgroundTint="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1.2">

                    <Button
                        android:id="@+id/id_verify_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/golden"
                        android:text="Verify"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>