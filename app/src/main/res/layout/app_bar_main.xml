<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme2"
    tools:context="com.gt.active_education.DashBoard_Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@null">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Active Education"
                        android:layout_weight="1.9"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/id_rght_agent"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/ic_frn_account"/>


                    <TextView
                        android:id="@+id/id_rght_serach_menu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/ic_magnifier"/>

                </LinearLayout>
            </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/id_lnr_search"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:background="@color/theme3"
            android:clickable="true"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/id_searchlayout"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/send_back"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">

                <ImageView

                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:rotationX="180"
                    android:src="@drawable/ic_send_btn" />
            </FrameLayout>
            <EditText
                android:id="@+id/id_edt_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:imeOptions="actionSearch"
                android:hint="Type Here..."
                android:singleLine="true"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center|left"
                android:textColor="@color/white"
                android:textCursorDrawable="@color/white"
                android:textColorHint="@color/white"
                android:backgroundTint="@color/white"/>
        </RelativeLayout>

       </RelativeLayout>

        <include layout="@layout/content_main" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_lnr_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@drawable/ic_comm_menu">

        <LinearLayout
            android:id="@+id/id_linear_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/round_btn1"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/flt_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/ic_cal_recever"
                    android:layout_margin="0dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|bottom"
                    android:textSize="10dp"
                    android:layout_margin="2dp"
                    android:textColor="@color/white"
                    android:text="Call"
                    />
            </FrameLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/round_btn1"
                android:padding="0dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/ic_videocall_button"
                    android:layout_margin="0dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|bottom"
                    android:textSize="8dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:text="Video Call"
                    />
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_linear_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/round_btn1"
                android:padding="0dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/ic_chat_new"
                    android:layout_margin="0dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|bottom"
                    android:textSize="8dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:text="Chat"
                    />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
