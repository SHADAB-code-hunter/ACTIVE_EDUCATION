<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="#fa462c76"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/id_linear_HS"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp">
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/back_about">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/ic_college_graduation"/>

            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:textColor="@color/white"
                android:gravity="center|left"
                android:textStyle="bold"
                android:text=" High School"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_linear_intermediate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp">
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/back_about">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/ic_college_graduation"/>

            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:textColor="@color/white"
                android:gravity="center|left"
                android:textStyle="bold"
                android:text=" Intermediate"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_linear_graduate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp">
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/back_about">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/ic_college_graduation"/>

            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:textColor="@color/white"
                android:gravity="center|left"
                android:textStyle="bold"
                android:text=" Graduation"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_linear_inter_graduate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp">
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/back_about">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/ic_college_graduation"/>

            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:textColor="@color/white"
                android:gravity="center|left"
                android:textStyle="bold"
                android:text=" Post Graduation"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>