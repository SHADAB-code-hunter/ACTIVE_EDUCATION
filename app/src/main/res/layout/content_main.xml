<io.codetail.widget.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/id_frame_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DashBoard_Activity">

    <utilities.NotifyingScrollView
        android:id="@+id/id_notifi_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:scrollbars="none">
        <!---->

        <!---->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.05"
                android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/id_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:background="@drawable/vp_outline">

                </android.support.v4.view.ViewPager>
                <utilities.CirclePageIndicator
                    android:id="@+id/titles"
                    android:layout_height="25dp"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center|bottom"
                    android:gravity="center|bottom"
                    android:paddingTop="10dp"
                    android:background="@color/transparent"
                    android:layout_weight="1" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/id_btn_test"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Test"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/cardview_light_background"
                        android:text="Top University"
                        android:textColor="@color/theme_color" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/top_univerty_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/cardview_light_background"
                        android:text="Top College"
                        android:textColor="@color/theme_color" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/top_college_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/cardview_light_background"
                        android:text="Top School"
                        android:textColor="@color/theme_color" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/top_school_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#630c0b0d"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="0.1dp"
                    android:text="Top Admission Deal"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="0dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/dashboard_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1.5"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_lnr_need"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.1dp"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <com.gt.active_education.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/find_your_need"
                    app:rb_color="#d6433e5e"
                    app:rb_duration="2500"
                    app:rb_radius="22dp"
                    app:rb_rippleAmount="8"
                    app:rb_scale="12">

                    <LinearLayout
                        android:id="@+id/id_linear_find"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|right"
                            android:layout_weight="1.8"
                            android:gravity="center|right">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center|right"
                                android:gravity="center"
                                android:src="@drawable/ic_hand_arrow" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2.5"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center|left"
                                android:gravity="center"
                                android:text="Find Your Need"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>

                </com.gt.active_education.RippleBackground>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#630c0b0d"
                android:layout_marginBottom="0.1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:text=" Top Courses"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <!--   -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#630c0b0d"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/id_top_courses_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ebffffff"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=" Top Exams"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <!--  -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#630c0b0d"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/id_top_exams_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=" All Your Needs"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="#630c0b0d"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <utilities.BatteryProgressView
                        android:id="@+id/progress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"></utilities.BatteryProgressView>

                    <TextView
                        android:id="@+id/id_tv_learn"
                        android:layout_width="60dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_menu_learn"
                        android:gravity="center"
                        android:textColor="@color/white" />
                </FrameLayout>

                <android.support.v4.widget.Space
                    android:layout_width="2dp"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <utilities.BatteryProgressView
                        android:id="@+id/progress2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/id_tv_earn"
                        android:layout_width="60dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_menu_earn"
                        android:gravity="center"
                        android:textColor="@color/white" />
                </FrameLayout>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <utilities.BatteryProgressView
                        android:id="@+id/progress3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/id_tv_fun"
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_menu_fun"
                        android:gravity="center"
                        android:textColor="@color/white" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        </RelativeLayout>
    </utilities.NotifyingScrollView>

    <LinearLayout
        android:id="@+id/reveal_items"
        android:visibility="gone"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff653f"
        android:clickable="true"
        android:orientation="vertical">

       <android.support.v7.widget.RecyclerView
           android:id="@+id/id_search_recycler"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginBottom="55dp"
           android:background="#c2384048">

       </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</io.codetail.widget.RevealFrameLayout>

