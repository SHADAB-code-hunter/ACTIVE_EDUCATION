<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/id_edt_s_name"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            android:singleLine="true"
            android:hint="Name of School " />
        <EditText
            android:id="@+id/id_edt_b_name"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            android:singleLine="true"
            android:hint="Name of Board" />
        <EditText
            android:id="@+id/id_edt_pass_year"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            android:singleLine="true"
            android:hint="Passing year"
            android:inputType="number"/>
        <EditText
            android:id="@+id/id_edt_duration"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            android:hint="Duration" />
        <EditText
            android:id="@+id/id_mark_percent"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            android:singleLine="true"
            android:hint="Obtain Marks In Percentage (%)" />

        <LinearLayout
            android:id="@+id/id_linear_attach"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:visibility="gone"
            android:background="#463d5c"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Attach Documents"
                android:textColor="@color/white"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/contact_attachment_icon_light"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>