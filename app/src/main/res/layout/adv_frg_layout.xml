<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/id_winner_linear">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/id_toolbar_winner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.42"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="vertical"
            android:background="@drawable/light_layer">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_back_quicz_Quick_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="2.1"
                    android:background="@drawable/ic_previous_btn" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="0.7">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"/>
                    <ImageView
                        android:id="@+id/toolbar_icn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/icn_winner"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:text="Winner"
                        android:gravity="center_vertical" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"/>

                </LinearLayout>



                <TextView
                    android:id="@+id/id_icon_timer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="9dp"
                    android:layout_weight="2.1"

                    android:visibility="gone" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_margin="0dp"
                    android:layout_weight="2.1"
                    android:gravity="center"
                    android:text="00:00:00"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/toolbar_skip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="2.1"
                    android:background="@drawable/ic_exit_btn"
                    android:gravity="top|center"
                    android:visibility="invisible"
                    android:text="Exit"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"/>

            </LinearLayout>


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1.2">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_weight="1">
       <!-- <ImageView
            android:id="@+id/id_image_profile"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:src="@drawable/profile_round"
            android:background="@drawable/ic_circle"/>-->

             <com.mikhaellopez.circularimageview.CircularImageView
                 android:id="@+id/id_image_profile"
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:layout_marginLeft="0dp"
                 android:src="@drawable/ic_profile_pictures"
                 app:civ_border_color="#EEEEEE"
                 app:civ_border_width="1dp"
                 app:civ_shadow="true"
                 app:civ_shadow_radius="5"
                 app:civ_shadow_color="#8BC34A"/>
         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="top"
            android:layout_weight="2">

            <TextView
                android:id="@+id/id_rank_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" 5"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/id_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top|center"
                android:textSize="16sp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.75">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/adv_img"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/light_layer"
            android:padding="10dp"
            android:layout_margin="0dp"
            android:gravity="center"
            android:layout_weight="1.4">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/img_call_now" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>