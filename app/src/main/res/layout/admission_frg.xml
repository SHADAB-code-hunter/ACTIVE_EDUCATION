<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

 <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!-- firt linear layout-->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:src="@drawable/ic_name"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/id_edt_fname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:hint="First Name"
                        android:layout_weight="0.3"/>
                </LinearLayout>

                <!-- Second layout-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:src="@drawable/ic_name"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/id_l_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:hint="Last Name"
                        android:layout_weight="0.3"/>
                </LinearLayout>

                <!-- Father linear layout-->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_fname"

                        android:layout_margin="12dp"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/id_fth_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:hint="Father Name"
                        android:layout_weight="0.3"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1.7">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/id_img_picker"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1.8"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_prfl_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Gender"/>
                    <RadioGroup
                        android:id="@+id/id_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="8sp"
                            android:text="Male"
                           />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="match_parent" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="8sp"

                            android:text="Female"
                           />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <!--  part two -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!-- firt linear layout-->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_dial_apd"
                        android:layout_margin="12dp"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/id_m_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:inputType="number"
                        android:hint="Mobile"
                        android:layout_weight="0.17"/>
                </LinearLayout>

                <!-- Second layout-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_gmail"
                        android:layout_margin="12dp"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/id_edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:hint="E-Mail "
                         android:layout_weight="0.17"/>
                </LinearLayout>

                <!-- Father linear layout-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_category"
                        android:layout_margin="12dp"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/id_edt_cat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:hint="Category"
                         android:layout_weight="0.17"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_dob"
                        android:layout_margin="13dp"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/id_edt_dob"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:hint="Date Of Birth"
                        android:inputType="date"
                        android:layout_weight="0.17"/>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <!-- end-->


        <!--  part two -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!-- firt linear layout-->



                <!-- Second layout-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_add"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/id_edt_add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:hint="Address "
                        android:singleLine="true"
                         android:layout_weight="0.17"/>
                </LinearLayout>


                <!-- Father linear layout-->
                <RelativeLayout
                    android:id="@+id/id_frm_state"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/id_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_new_state"
                        android:layout_marginLeft="15dp" />
                    <TextView
                        android:id="@+id/id_text_tv_state"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:gravity="center|left"
                        android:layout_marginLeft="60dp"
                        android:textColor="@color/grey_home"
                        android:textSize="16sp"
                        android:backgroundTint="#ffffff"
                        android:text="State"/>
                    <TextView
                        android:layout_below="@+id/id_text_tv_state"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="60dp"
                        android:background="@color/grey_home"
                        android:layout_gravity="bottom"/>


                    <!-- </android.support.design.widget.TextInputLayout>-->

                </RelativeLayout>

                <!-- Father linear layout-->
                <RelativeLayout
                    android:id="@+id/id_frm_city"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/id_img_city"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_city"
                        android:layout_marginLeft="15dp" />
                    <TextView
                        android:id="@+id/id_text_tv_city"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:gravity="center|left"
                        android:layout_marginLeft="60dp"
                        android:textColor="@color/grey_home"
                        android:textSize="16sp"
                        android:backgroundTint="#ffffff"
                        android:text="City"/>
                    <TextView
                        android:layout_below="@+id/id_text_tv_city"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="60dp"
                        android:background="@color/grey_home"
                        android:layout_gravity="bottom"/>


                    <!-- </android.support.design.widget.TextInputLayout>-->

                </RelativeLayout>
                <!-- Second layout-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_pincode"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/id_edt_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:hint="Pincode "
                        android:inputType="number"
                        android:layout_weight="0.17"/>


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_share_reffreral"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/id_edt_reffreralcode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:hint="Refferal Code "
                        android:layout_weight="0.17"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/id_btn_submit"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="300dp"
        android:layout_gravity="bottom|center"
        android:text="Submit"/>

</LinearLayout>
</ScrollView>