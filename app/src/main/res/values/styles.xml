    <style name="MaterialAnimations.Text.Section" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MaterialAnimations.Icon">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="MaterialAnimations.Icon.Big">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="MaterialAnimations.Icon.Medium">
        <item name="android:layout_width">84dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">84dp</item>
    </style>

    <style name="MaterialAnimations.Icon.Medium.Scaled" parent="MaterialAnimations.Icon.Medium">
        <item name="android:alpha">0</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
    </style>

    <style name="MaterialAnimations.Icon.Small">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="MaterialAnimations.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_normal</item>
    </style>

    <style name="MaterialAnimations.Button.Scaled" parent="MaterialAnimations.Button">
        <item name="android:scaleX">0</item>
        <item name="android:scaleY">0</item>
    </style>

    <style name="Theme_customBack.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme_customBack.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ContentTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/btn_color</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/bottomsheet_exit</item>
        <item name="android:windowExitAnimation">@anim/bottomsheet_exit</item>
    </style>


    <!--  tumblr -->


    <style name="Item" parent="">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Item.Small">
        <item name="android:layout_width">@dimen/item_circle_size_small</item>
        <item name="android:layout_height">@dimen/item_circle_size_small</item>
        <item name="android:textSize">@dimen/item_font_size_small</item>
    </style>

    <style name="Item.Medium">
        <item name="android:layout_width">@dimen/item_circle_size_medium</item>
        <item name="android:layout_height">@dimen/item_circle_size_medium</item>
        <item name="android:textSize">@dimen/item_font_size_medium</item>
    </style>

    <style name="Item.Large">
        <item name="android:layout_width">@dimen/item_circle_size_large</item>
        <item name="android:layout_height">@dimen/item_circle_size_large</item>
        <item name="android:textSize">@dimen/item_font_size_large</item>
    </style>

    <style name="Item.Tumblr">
        <item name="android:layout_width">@dimen/item_circle_size_tumblr</item>
        <item name="android:layout_height">@dimen/item_circle_size_tumblr</item>
        <item name="android:textSize">@dimen/item_font_size_tumblr</item>
        <item name="android:textColor">@color/tumblr_primary</item>
    </style>

    <style name="Item.Path">
        <item name="android:layout_width">@dimen/item_circle_size_path</item>
        <item name="android:layout_height">@dimen/item_circle_size_path</item>
        <item name="android:textSize">@dimen/item_font_size_path</item>
        <item name="android:background">@drawable/path_white_oval</item>
    </style>


    <style name="Widget.MaterialRatingBar.RatingBar" parent="android:Widget.RatingBar">
        <!--
        Disabled for correct behavior on Android 4.x, see
        https://github.com/android/platform_frameworks_base/commit/911743652b597057a1bd7ef8a921e9ff8dce0f4a#diff-149f45c5ff2d3185bb79688ba17bc432L536
        <item name="android:progressDrawable">@null</item>
        -->
        <item name="android:indeterminateDrawable">@color/brown</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:maxHeight">36dp</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Small">
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Indicator">
        <item name="android:isIndicator">true</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Indicator.Small">
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>
</resources>
