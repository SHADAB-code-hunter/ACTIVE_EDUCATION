<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape  >
            <gradient
                android:angle="315"
                android:startColor="#ff551f"
                android:centerColor="#4d412983"
                android:endColor="#ff00b5"
                android:type="linear" />
            <size android:width="24dp"
                android:height="24dp"/>

            <corners android:radius="20dp"/>

        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape  >
            <solid android:color="#6a5cc6" />
            <corners android:radius="20dp"/>
        </shape>
    </item>

</layer-list>

