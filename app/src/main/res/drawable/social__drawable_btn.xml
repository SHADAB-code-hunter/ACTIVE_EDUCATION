<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape >
            <!--circle filling color-->
            <corners android:radius="5dp"/>
            <gradient
                android:angle="90"
                android:endColor="#949494"
                android:centerColor="#949494"
                android:startColor="#949494"
                android:type="linear" />
            <stroke
                android:width="1.5dp"
                android:color="#3d66b9" />

        </shape>
    </item>
    <item>
        <shape >
            <!--circle filling color-->
            <corners android:radius="5dp"/>
            <gradient
                android:angle="90"
                android:endColor="#00ffffff"
                android:centerColor="#00ffffff"
                android:startColor="#00c2c0c0"
                android:type="linear" />
            <stroke
                android:width="0.2dp"
                android:color="#d24225" />

        </shape>
    </item>

</selector>