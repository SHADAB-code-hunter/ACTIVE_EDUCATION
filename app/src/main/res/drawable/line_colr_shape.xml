<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#AA47FF"
                android:endColor="#210EFF"
                android:angle="180"/>
            <corners
                android:radius="4dp"/>

        </shape>
    </item>
    <item
        android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#AA47FF"
                android:endColor="#210EFF"
                android:angle="180"/>
            <corners
                android:radius="4dp"/>

        </shape>
    </item>

</selector>