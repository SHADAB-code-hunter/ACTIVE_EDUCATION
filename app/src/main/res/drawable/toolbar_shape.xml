<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >

        <shape>
            <gradient
                android:startColor="#7C5ED8"
                android:centerColor="#6268DA"
                android:endColor="#4F7CD9"
                android:angle="270"

                />
            <solid
                android:color="#00000000" />
            <stroke
                android:width="0dp"
                android:color="@color/white" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>

        <shape>

            <gradient
                android:startColor="#7a7c5ed8"
                android:centerColor="#956268da"
                android:endColor="#8c4f7cd9"
                android:angle="270"/>
            <stroke
                android:width="0dp"
                android:color="#ffffff" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>